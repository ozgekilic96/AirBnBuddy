<div class="text-center mt-5">
  <h2>Hello, <%= @user.first_name %> <%= @user.last_name %></h2>
  <h3 class="mt-5">My Robots</h3>
  <div class="row">
    <% @robots.each do |robot| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to robot.robot_name, robot_path(robot) %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <h2>My Bookings</h2>
  <ul>
    <% @bookings.each do |booking| %>
      <li><%= link_to booking.robot.robot_name, robot_path(booking.robot) %> - <%= booking.start_date %> until <%= booking.return_date %></li>
      <%= button_to "Delete this booking", booking_path(booking), method: :delete, class: "btn btn-danger text-light", data: { turbo_confirm: "Are you sure you want to delete this booking?" } %>
    <% end %>
  </ul>
</div>
