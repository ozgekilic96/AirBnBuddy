<%= render "shared/navbar" %>




  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
        <img src="https://images.unsplash.com/photo-1535378620166-273708d44e4c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1557&q=80" alt="ulrich photo" class="rounded-circle" width= 150px>
      </div>

      <div class="col-md-8 text-center mt-4">
        <h2>Hello, <%= @user.first_name %> <%= @user.last_name %></h2>
      </div>
  </div>

  <div class="container">
    <h3 class="mt-5">My Robots</h3>
    <div class="row">
      <% @robots.each do |robot| %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="<%= app/assets/images/disco_man.jpg%>" alt="<%=disco man %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= link_to robot.robot_name, robot_path(robot) %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container">
    <h3>My Bookings</h3>
    <ul>
      <% @bookings.each do |booking| %>
        <li><%= link_to booking.robot.robot_name, robot_path(booking.robot) %> - <%= booking.start_date %> until <%= booking.return_date %></li>
        <%= button_to "Delete this booking", booking_path(booking), method: :delete, class: "btn btn-danger text-light", data: { turbo_confirm: "Are you sure you want to delete this booking?" } %>
      <% end %>
    </ul>
  </div>
