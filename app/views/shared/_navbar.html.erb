<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex justify-content-between container-fluid">
    <div>
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/ddfjqexgw/image/upload/v1692903947/Screenshot_1_new_f8wq1y.jpg", class: "logo-image" %>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="justify-content-center">
      <%= form_tag robots_path, method: :get do %>
        <%= text_field_tag :search, params[:search], placeholder: 'Search robot name', class: "input-width" %>
        <%= submit_tag 'Search', class: "search" %>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">

        <% if user_signed_in? %>
          <li class="nav-item-active">
            <%= link_to "Home", root_path, class: "nav-item-active" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://res.cloudinary.com/ddfjqexgw/image/upload/v1693490930/DefaultAvatar_zwdogj.jpg", class: "avatar", alt: "dropdown menu" %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", user_path(@user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link button" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link button" %>
        </li>

        <% end %>
      </ul>
    </div>
  </div>
</div>
