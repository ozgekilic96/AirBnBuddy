<%= render "shared/navbar" %>
<div class="background-img">
  <div class="content">
      <h1 class="text-center"><%= @category.capitalize %> Robots</h1>
      <div class="d-flex justify-content-between">
        <div class="row m-5">
          <% if @robots_in_category.present? %>
            <% @robots_in_category.each do |robot| %>
              <div class="col-md-4 mb-4">
                <%= link_to robot_path(robot), class: "text-decoration-none" do %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/ddfjqexgw/image/upload/v1692905976/<%= robot.robot_pictures %>)">
                  <%= robot.robot_name %>
                </div>
              <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="card-map" style="width: 50%; height: 700px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
