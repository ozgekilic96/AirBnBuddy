<%= render "shared/navbar" %>
<div class="content">
  <h1 class="text-center my-3">Robots</h1>
  <div class="cards">
    <% @robots.each do |robot| %>
      <%= link_to new_robot_booking_path(robot), class: "text-decoration-none" do %>
        <div class="card-trip">
          <img src="https://res.cloudinary.com/ddfjqexgw/image/upload/v1692905976/<%= robot.robot_pictures %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= robot.robot_name %></h2>
              <p><%= robot.description %></p>
            </div>
            <h2 class="card-trip-pricing">â‚¬ <%= robot.price %>/hour</h2>
          </div>
          <div class="card-hover-content">
            <h1>Book Now</h1>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
